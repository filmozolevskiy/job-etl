# Job-ETL Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection
POSTGRES_DB=job_etl
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URLs (constructed from above)
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/job_etl
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://postgres:your_password_here@localhost:5432/airflow

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
# Airflow web server settings
AIRFLOW__WEBSERVER__WEB_SERVER_PORT=8080
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=False
AIRFLOW__WEBSERVER__SECRET_KEY=your_airflow_secret_key_here

# Airflow executor
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__PARALLELISM=4
AIRFLOW__CORE__MAX_ACTIVE_TASKS_PER_DAG=16

# Airflow timezone
AIRFLOW__CORE__DEFAULT_TIMEZONE=America/Toronto
AIRFLOW__WEBSERVER__DEFAULT_UI_TIMEZONE=America/Toronto

# =============================================================================
# API CONFIGURATION
# =============================================================================
# RapidAPI or other job posting APIs
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=your_api_host_here

# API rate limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Webhook URLs for notifications (Slack/Discord/Teams)
WEBHOOK_URL=your_webhook_url_here
WEBHOOK_ENABLED=true

# Slack configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#job-etl-notifications

# Discord configuration
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# =============================================================================
# DBT CONFIGURATION
# =============================================================================
# dbt profile configuration
DBT_PROFILES_DIR=./dbt/profiles
DBT_PROJECT_DIR=./dbt/job_dbt
DBT_TARGET=dev

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker compose project name
COMPOSE_PROJECT_NAME=job-etl

# Container networking
AIRFLOW_UID=50000
AIRFLOW_GID=0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Debug mode
DEBUG=false
LOG_LEVEL=INFO

# Local development toggles
ENABLE_PGADMIN=false
ENABLE_REDIS=false
ENABLE_CELERY=false

# =============================================================================
# TABLEAU CONFIGURATION
# =============================================================================
# Tableau Hyper API settings
TABLEAU_HYPER_API_PATH=./artifacts
TABLEAU_SERVER_URL=your_tableau_server_url_here
TABLEAU_USERNAME=your_tableau_username_here
TABLEAU_PASSWORD=your_tableau_password_here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Encryption keys (generate new ones for production)
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
